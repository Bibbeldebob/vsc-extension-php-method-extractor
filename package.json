{
  "name": "php-method-extractor",
  "displayName": "PHP Method Extractor",
  "description": "This extension allows you to extract parts of your code into their own method.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bibbeldebob/vsc-extension-php-method-extractor"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "php-method-extractor.extractMethod",
        "title": "Extract Method"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "php-method-extractor.extractMethod",
          "when": "editorLangId == php"
        }
      ],
      "commandPalette": [
        {
          "command": "php-method-extractor.extractMethod",
          "when": "editorLangId == php"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
